<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomeWork11</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HomeWork11.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <a class="zoom-text" asp-controller="Home" asp-action="Index">Simple</a>

        <nav class="categories">
            <a class="category" asp-controller="Services" asp-action="Index">Services</a>
            <a class="category">Contacts</a>
            <a class="category">About Us</a>
        </nav>
    </header>
    <div class="header-line"></div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-line"></div>

        <div class="footer-content">
            <div class="left-section">
                <p>All rights reserved &copy;</p>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
